- var sorting = ["по цене", "по популярности"]
- var views = ["rows", "grids", "lines"]
- var options = {"Тип SIM-карты" : "Micro-SIM", "Количесто SIM-карт" : "1", "Цвет" : "Белый", "ОС" : "Android", "Связь 3G" : "Есть", "4G LTE" : "Нет", "GPS-модуль" : "Есть"}

.container
	.content-container
		include accordeon

		.content
			.sort
				.sort__left
					.sort__select--wrap
						.sort__title Сортировать по
						.sort__select
							select.sort__select-elem
								each option in sorting
									option(value="")= option
				.sort__right
					.sort__title Вид каталога
					.sort__view
						ul.sort__view-list
							each view in views
								li(class="sort__view-item sort__view_" + view data-view= view)
									a(href="#").sort__view-link
										.sort__view-icon
			.products
				ul.products__list#products-list
					- for (var i = 0; i < 9; i++)
						li.products__item
							.products__item-inner
								.products__left
									.products__slideshow
										.products__slideshow-block
											a(href="#").products__slideshow-display
												img(src="http://lorempixel.com/200/200/technics/6" alt="").products__slideshow-img
											ul.products__slideshow-thumbs
												- for (var j = 0; j < 3; j++)
													li.products__slideshow-item
														a(href="#").products__slideshow-link
															img(src="http://lorempixel.com/45/45/technics/" + j alt="").products__slideshow-thumbs-img
										.products__article
											.products__article-word Артикул
											.products__article-num 189238
									.products__desc
										.products__desc-title Samsung FT-I9301I GALAXY S3
										ul.products__desc-options
											- var index = 0;
											- for (item in options)
												li(class="products__option-item" + (!(index++ % 2) ? ' products__option-item_colored' : ''))
													.products__option-key= item
													.products__option-value= options[item]
										div(class="products__rating" data-rating="4")
								.products__right
									.products__info
										.products__price 11 290 
											i.rub
									.products__info-bottom
										a(href="#").products__buy-btn В корзину
										.products__availability В наличии
			.pagination
				ul.pagination__list
					li.pagination__item.pagination__item_prev
						a(href="#").pagination__link
							.pagination__mark
					- for (var i = 1; i < 4; i++)
						li.pagination__item
							a(href="#").pagination__link
								.pagination__mark= i
					li.pagination__item.pagination__item_next
						a(href="#").pagination__link
							.pagination__mark

	include article